[
    build application { target = "mmchs",
                    cFiles = (find withSuffices [".c"]),
                    mackerelDevices = [
                        "ti_i2c",
                        "ti_twl6030",
                        "sdhc",
                        "omap/omap44xx_mmchs",
                        "omap/omap44xx_ctrlmod",
                        "omap/omap44xx_l3init_cm2",
                        "omap/omap44xx_ckgen_cm2",
                        "omap/omap44xx_l4per_cm2"
                    ],
                    addCFlags = [ "-DIN_KERNEL" ],
                    addIncludes = [
                        "../../../../kernel/include/",
                        "../../../../kernel/include/arch/armv7/"
                    ],
                    architectures = ["armv7"]
                  }
]